{
  "root": true,
  "extends": ["plugin:node/recommended", "plugin:prettier/recommended"],
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "overrides": [
    {
      "files": ["**/*test.js", "**/*Tests.js", "tests/**/*.js"],
      "rules": {
        "node/no-unpublished-require": 0,
        "no-nonoctal-decimal-escape": 0,
        "no-unsafe-optional-chaining": 0
      }
    }
  ]
}
