{
  "appName": "Cerfa App",
  "env": "local",
  "isOffline": "true",
  "publicUrl": "http://localhost",
  "mongodb": {
    "uri": "mongodb://127.0.0.1:27017/cerfa?retryWrites=true&w=majority"
  },
  "apiKey": "12345",
  "auth": {
    "passwordHashRounds": 1001,
    "user": {
      "jwtSecret": "1234",
      "expiresIn": "24h"
    },
    "activation": {
      "jwtSecret": "45678",
      "expiresIn": "96h"
    },
    "password": {
      "jwtSecret": "91011",
      "expiresIn": "1h"
    }
  },
  "log": {
    "level": "info",
    "type": "console",
    "destinations": "stdout"
  },
  "slackWebhookUrl": null,
  "outputDir": ".local/output",
  "smtp": {
    "host": "CERFA_SMTP_HOST",
    "port": "CERFA_SMTP_PORT",
    "auth": {
      "user": "CERFA_SMTP_AUTH_USER",
      "pass": "CERFA_SMTP_AUTH_PASS"
    }
  }
}
